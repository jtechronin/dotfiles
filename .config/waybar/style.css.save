* {
  border: none;
  border-radius: 0;
  font-family: "JetBrainsMono Nerd Font", monospace;
  font-size: 14px;
  min-height: 0;
}

window#waybar {
  background-color: rgba(30, 30, 46, 0.9);
  color: #cdd6f4;
}

#workspaces button {
  padding: 0 10px;
  color: #cdd6f4;
  background: transparent;
  border-bottom: 2px solid transparent;
}

#workspaces button.active {
  border-color: #89b4fa;
  background-color: rgba(24, 24, 37, 0.5);
}

#clock,
#pulseaudio,
#battery,
#network,
#tray,
#keyboard-state {
  padding: 0 10px;
}

